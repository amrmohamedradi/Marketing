{
  "rewrites": [
    {
      "source": "/api/specs/:path*",
      "destination": "https://backend-marketing-production-67fd.up.railway.app/api/specs/:path*"
    },
    {
      "source": "/api/:path*",
      "destination": "https://backend-marketing-production-67fd.up.railway.app/api/:path*"
    },
    {
      "source": "/((?!api|_next|favicon.ico|.*\\.).*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ]
}
